{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% block content %}
  <div class="card">
    <div class="card-header">
      <h3 class="card-header-title">Demo JS Routing</h3>
    </div>
    <div class="card-body">
      <div class="form-group">
        <label for="demo_js_routing">Search for customer</label>
        <input type="text" id="demo_search_customer" class="form-control">
      </div>
      <div class="form-group">
        <button type="button" id="demo_search_customer_btn" class="btn btn-primary">Search</button>
      </div>

      <div id="info-block" class="d-none"></div>
