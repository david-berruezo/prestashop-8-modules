        <table class="table">
          <thead>
            <tr>
              <th>Email</th>
              <th>Fullname</th>
            </tr>
          </thead>
          <tbody>
          </tbody>
        </table>
      </div><!-- #customers-results -->
    </div><!-- .card-body -->
  <div><!-- .card -->
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('../modules/demojsrouting/views/js/demo-page.js') }}"></script>
{% endblock %}
